{% extends 'login.html.twig' %}



{% block body %}
<main class="main-content mt-0 ps">
    <div class="page-header align-items-start min-vh-100"
      style="background-image: url({{ asset('assets/img/signup_bg3.jpg') }});">
      <span class="mask bg-gradient-dark opacity-6"></span>
      <div class="container my-auto">
      <div class="row">
      <div class="col-lg-6 col-md-8 col-12 mx-auto">
      <div class="card z-index-0 fadeIn3 fadeInBottom">
      <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
      <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">

                  <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Reset Password</h4>
                  <div class="row mt-3">
                   
                </div>
                </div>
              </div>
              <div class="row px-xl-5 px-sm-4 px-3">
                
              </div>
              <div class="card-body">
                <form method="post">
               
               
                <div class="row mt-3">
                    <div class="col-12 col-sm-12">
                      <div class="input-group input-group-dynamic">
                        <label for="exampleFormControlInput1" class="form-label"> NewPassword</label>
                        <input type="password" name="password" id="inputPass" class="form-control" placeholder="New Password" required/>
                        <input type="hidden"  name="token" value={token}">
                      </div>
                    </div>
                    
                </div>
                
                   
                
                
                <div class="col-12 text-center">
                    <button type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2">Submit</button>
                </div>
                
              </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="ps__rail-x" style="left: 0px; bottom: 0px;">
      <div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div>
    </div>
    <div class="ps__rail-y" style="top: 0px; right: 0px;">
      <div class="ps__thumb-y" tabindex="0" style="top: 0px; height: 0px;"></div>
    </div>
  </main>
  
   
{% endblock %}
