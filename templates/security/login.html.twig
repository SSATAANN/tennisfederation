{% extends 'login.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<main class="main-content  mt-0">
    <div class="page-header align-items-start min-vh-100" style="background-image: url({{ asset('assets/img/login_bg1.jpg') }});">
    <span class="mask bg-gradient-dark opacity-6"></span>
    <div class="container my-auto">
    <div class="row">
    <div class="col-lg-4 col-md-8 col-12 mx-auto">
    <div class="card z-index-0 fadeIn3 fadeInBottom">
    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
    <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
    <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Sign in</h4>
    <div class="row mt-3">
        {% if app.user == null %}
        <p class="text-white mt-4 text-sm text-center">
            Login here using your Email and Password
        </p>
        {% endif %}
        {% if error %}
        <p class="text-white mt-4 text-sm text-center">
            <strong>{{ error.messageKey|trans(error.messageData, 'security') }}
        </p>
       
        {% endif %}
        {% if app.user %}
        <p class="text-white mt-4 text-sm text-center">
            You are logged in as {{ app.user.name }} ,   <a href="{{ path('app_logout') }}"><strong class="text-white">LOGOUT</strong> </a>
        </p>
        
        
        {% endif %}
    </div>
    </div>
    </div>
    <div class="card-body">
    <form  method="post" class="text-start">
    <div class="input-group input-group-outline my-3">
    <label class="form-label">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    </div>
    <div class="input-group input-group-outline mb-3">
    <label class="form-label">Password</label>
   <input class="form-control" id="password" name="password" type="password" required="true" autocomplete="current-password" onfocus="focused(this)" onfocusout="defocused(this)">

    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <div class="form-check form-switch d-flex align-items-center mb-3">
    <input class="form-check-input" type="checkbox" id="rememberMe" checked>
    <label class="form-check-label mb-0 ms-3" for="rememberMe">Remember me</label>
    </div>
    <div class="text-center">
    <button type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2">Sign in</button>
    </div>
    <p class="mt-4 text-sm text-center">
    Don't have an account?
    <a href="{{ path('registration') }}" class="text-primary text-gradient font-weight-bold">Sign up</a>
    </p>
    </form>
    </div>
    </div>
    </div>
    </div>
    </div>
    
    </div>
    </main>

{% endblock %}
