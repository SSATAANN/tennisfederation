          <section class="my-5 py-5 " id="matches-section">
            
            <div class="container mt-sm-5 mt-3">
              <div class="row">
                <div class="col-lg-3">
                  <div class="position-sticky pb-lg-5 pb-3 mt-lg-0 mt-5 ps-2" style="top: 100px">
                    <h3>Matches</h3>
                    <h6 class="text-secondary font-weight-normal pe-3">Stay updated with the latest match results and scores</h6>
                  </div>
                </div>
                
                <div class="col-lg-9 ">
                  <div class="block-area ">
                    <div class="card card-full ">
                      {% for match in matches|slice(0, 4) %}
                      <div class="row justify-content-center">
                      
                        <div class="col-sm-12 mb-2">
                          <div class="card-body pt-4 pt-sm-0">
                            <!--title-->
                            <h3 class="card-title">
                              <a href="#">{{ match.player1}} VS {{ match.player2}}</a>
                            </h3>
                            <!-- author, date & comments -->
                            <div class="card-text mb-2 text-muted small">
                              <span class="d-none d-sm-inline me-1">
                                <a class="font-weight-bold text-center" href="#">Tournament : {{ match.tournament}}</a>
                                
                              </span>
                              <time datetime="2019-10-21">{{ match.date|date('Y-m-d') }}</time>
                            
                            </div>
                            <!--description-->
                            
                            {% if match.etat == 'en cours' %}
                              <a class="font-weight-bold text-center" href="#">Winner :</a> <a href="#"> {{ match.etat}}</a>
                              {% elseif match.etat == 'termine' %}
                              <a class="font-weight-bold text-center" href="#">Result :</a> <a href="#"> {{ match.resultat}}</a> <br>
                              <a class="font-weight-bold text-center" href="#">Winner :</a> <a href="#"> {{ match.winner}}</a>
                              {% else %}
                              <a class="font-weight-bold text-center" href="#">Soon :</a> <a href="#"> {{ match.date|date('Y-m-d')}}</a>
                            {% endif %}
                            <!--read more button-->
                            <div class="text-end">
                              <a class="font-weight-bold text-center" href="{{ path('app_match_client') }}">
                              <button type="button" class="btn btn-rounded bg-gradient-primary mt-4">View Matches</button>
                              </a>
                            </div>
                          </div>
                        </div>
                      </div>
                      {% endfor %}
                    </div>
                  </div>
            </div>
          </section>
          


          
        
