          {% block content %}
          
          <section class="my-5 py-5" id="players-section">
            
            <div class="container">
              <div class="row justify-content-center text-center my-sm-5">
                <div class="col-lg-6">
                <span class="badge badge-primary mb-3">Rank 1 Player</span>
                <h2 class="text-dark mb-0">HUGE COLLECTION OF PLAYERS</h2>
                <p class="lead">Experience the incredible skills and unmatched performance of our rank 1 player.</p>
                </div>
                </div>
              <div class="row align-items-center">
      
            {% for playerCard in playerCards %}
                {% if playerCard.ranking == 1 %}
                <div class="col-lg-4 ms-auto me-auto p-lg-4 mt-lg-0 mt-4">
                  <div class="rotating-card-container">
                     <div class="card card-rotate card-background card-background-mask-primary shadow-primary mt-md-0 mt-5 mb-5">
                        
                        <div class="front front-background" style="background-image: url({{ asset('assetClient/assets/img/novak.jfif') }}); background-size: cover;">
                           <div class="card-body py-10 text-center">
                              <h3 class="text-white" style="font-size: 150px; position: absolute; bottom: 0px; right: 10px;">{{ playerCard.ranking }}</h3>
                              <h3 class="text-white opacity-8" style="font-size: 40px; position: absolute; bottom: 35px; right: 90px;">RANK</h3>
                              <h2 class="text-white mb-5">{{ playerCard.firstName }} {{ playerCard.lastName }}</h2>
                              
                              <h5 class="text-white">Nationality </h5><p class="text-white opacity-8">{{ playerCard.nationality }}</p>
                             
                              <h5 class="text-white">Bio </h5><p class="text-white opacity-8"> {{ playerCard.bio }}</p>
                           </div>
                        </div>
                        
                        <div class="back back-background" style="background-image: url({{ asset('uploads/player_images/' ~ playerCard.image) }}); background-size: cover;">
                           <div class="card-body pt-7 text-center">
                              <h3 class="text-white">Discover More</h3>
                              <p class="text-white opacity-8">Discover a diverse lineup of talented players and delve into their profiles, unlocking a wealth of information and insights</p>
                              <a href="{{ path('app_player_card') }}"  class="btn btn-white btn-sm w-50 mx-auto mt-3">See All Players</a>
                           </div>
                        </div>
                        
                     </div>
                  </div>
               </div>
               <div class="col-lg-6 ms-auto">
                <div class="row justify-content-start">
                  <div class="col-md-4">
                    <div class="info">
                      <i class="material-icons text-gradient text-primary text-3xl">height</i>
                      <h5 class="font-weight-bolder mt-3">Height</h5>
                      <p class="pe-5">{{ playerCard.height }} Cm</p>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="info">
                      <i class="material-icons text-gradient text-primary text-3xl">fitness_center</i>
                      <h5 class="font-weight-bolder mt-3">Weight</h5>
                      <p class="pe-3">{{ playerCard.weight }} Kg</p>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="info">
                      <i class="material-icons text-gradient text-primary text-3xl">{{ playerCard.gender }}</i>
                      <h5 class="font-weight-bolder mt-3">Gender</h5>
                      <p class="pe-3">{{ playerCard.gender }} </p>
                    </div>
                  </div>
                </div>
