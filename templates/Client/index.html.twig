                    <i class="material-icons text-gradient text-primary text-3xl">pan_tool</i>
                    <h5 class="font-weight-bolder mt-3">Handedness</h5>
                    <p class="pe-5">{{ playerCard.handedness }}</p>
                  </div>
                  <div class="col-md-4 mt-3">
                    <div class="info">
                      <i class="material-icons text-gradient text-primary text-3xl">list_alt</i>
                      <h5 class="font-weight-bolder mt-3">Titles</h5>
                      <p class="pe-3">{{ playerCard.titles }}</p>
                    </div>
                  </div>
