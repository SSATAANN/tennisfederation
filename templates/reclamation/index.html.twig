{% extends 'baseAdmin.html.twig' %}

{% block title %}Players!{% endblock %}

{% block body %}

<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">

  <nav class="navbar navbar-main navbar-expand-lg position-sticky mt-4 top-1 px-0 mx-4 shadow-none border-radius-xl z-index-sticky" id="navbarBlur" data-scroll="true">
    <div class="container-fluid py-1 px-3">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
         
          <li class="breadcrumb-item text-sm">
            <a class="opacity-5 text-dark" href="javascript:;">Management </a>
          </li>
          <li class=" text-sm text-dark active" aria-current="page"> / List Complaints</li>
        </ol>
        <h6 class="font-weight-bolder mb-0">Complaints</h6>
      </nav>
      <div class="sidenav-toggler sidenav-toggler-inner d-xl-block d-none ">
        <a href="javascript:;" class="nav-link text-body p-0">
          <div class="sidenav-toggler-inner">
            <i class="sidenav-toggler-line"></i>
            <i class="sidenav-toggler-line"></i>
            <i class="sidenav-toggler-line"></i>
          </div>
        </a>
      </div>
      
    </div>
  </nav>
    <div class="container-fluid py-4">
        <div class="row">
          <div class="col-12">
            <div class="card">
      
              <div class="card-header pb-0">
                <div class="d-lg-flex">
                  <div>
                    <h5 class="mb-0">All Complaints</h5>
                   
                  </div>
                  
              </div>
              <div class="card-body px-0 pb-0">
                <div class="table-responsive">
                  <div class="dataTable-wrapper dataTable-loading no-footer sortable searchable fixed-columns">
                    <div class="dataTable-top">
                      <div class="input-group input-group-outline">
                        <label class="form-label">Search here</label>
                        <input type="text" class="form-control dataTable-input"  id="recSearchInput">
                      </div>
                      
                    </div>
                    <div class="dataTable-container">
                      <table class="table table-flush dataTable-table" id="reclamations-list">
                        <thead class="thead-light">
                          <tr>
                            <th  class="border-0 text-center" scope="col" data-sortable="" colspan="1"><a href="#" class="dataTable-sorter">ID</a>   
                            </th>
                            <th class="border-0 text-center" scope="col" data-sortable="" colspan="1"><a href="#" class="dataTable-sorter">SUBJECT</a>   
                            </th>
                            
                            <th class="border-0 text-center" scope="col" data-sortable="" colspan="1"><a href="#" class="dataTable-sorter">DESCRIPTION</a>
                            </th>
                            <th class="border-0 text-center" scope="col" data-sortable="" colspan="1"><a href="#" class="dataTable-sorter">EMAIL</a>
                            </th>
                            
                            <th class="border-0 text-center" scope="col" data-sortable="" colspan="1"><a href="#" class="dataTable-sorter">Action</a></th>
                          </tr>
                        </thead>
                        <tbody>
                            {% for reclamation in reclamations %}
                                <tr>
                                    <td class="text-center text-sm">{{ reclamation.id }}</td>
                                    <td class="text-center text-sm">{{ reclamation.sujet }}</td>
                                    <td class="text-center text-sm">{{ reclamation.description }}</td>
                                    <td class="text-center text-sm">{{ reclamation.user.username }}</td>

                                    
                                    <td class="text-center text-sm">
                                        
                                          <a href="{{ path('app_supPComplaint', {'id':reclamation.id}) }}" data-bs-toggle="tooltip" data-bs-original-title="Delete Complaint">
                                            <i class="material-icons text-secondary position-relative text-lg">delete</i>
                                          </a>
                                </td>
                                    
                                </tr>
                            {% endfor %}
                           
                        </tbody>
      
                      </table>
                    </div>
                    
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      
      </div>
</main>
<script>
  // Get the search input element
  const searchInput = document.getElementById('recSearchInput');

  // Add an event listener to the search input for keyup event
  searchInput.addEventListener('keyup', function() {
    const filter = searchInput.value.toLowerCase(); // Get the search filter value

    // Get all table rows in the table body
    const tableRows = document.querySelectorAll('#reclamations-list tbody tr');

    // Loop through each table row and hide/show based on the search filter
    tableRows.forEach(function(row) {
      const playerName = row.querySelector('.text-center.text-sm:nth-child(2)').innerText.toLowerCase();
      if (playerName.includes(filter)) {
        row.style.display = ''; // Show the row if the player name matches the filter
      } else {
        row.style.display = 'none'; // Hide the row if the player name doesn't match the filter
      }
    });
  });
</script>
{% endblock %}
