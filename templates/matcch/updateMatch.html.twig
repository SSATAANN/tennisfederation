                                <label for="exampleFormControlInput1" class="form-label">Winner</label>
                              <div class="input-group input-group-dynamic">
                                {{ form_widget(f.winner, {
                                    'attr': {
                                        
                                        'class': 'form-control',
                                        'onfocus': 'focused(this)',
                                        'onfocusout': 'defocused(this)',

                                    }
                                }) }}
                              </div>
                            </div>
                            <div class="col-12 col-sm-6 mt-3 mt-sm-0">
                                <label for="exampleFormControlInput1" class="form-label">Loser</label>
                              <div class="input-group input-group-dynamic">
                                {{ form_widget(f.loser, {
                                    'attr': {
                                        'class': 'form-control',
                                        'onfocus': 'focused(this)',
                                        'onfocusout': 'defocused(this)',
                                    }
                                }) }}
                              </div>
                            </div>
                          </div>
                          <div class="row mt-3">
                            <div class="col-12 col-sm-6">
                                <label for="exampleFormControlInput1" class="form-label">Result</label>
                              <div class="input-group input-group-dynamic">
                                {{ form_widget(f.resultat, {
                                    'attr': {
                                        
                                        'class': 'form-control',
                                        'onfocus': 'focused(this)',
                                        'onfocusout': 'defocused(this)',
                                    }
                                }) }}
                              </div>
                            </div>
                            <div class="col-12 col-sm-6 mt-3 mt-sm-0">
                                <label for="exampleFormControlInput1" class="form-label">Status</label>
                              <div class="input-group input-group-dynamic">
                                {{ form_widget(f.etat, {
                                    'attr': {
                                        'class': 'form-control',
                                        'onfocus': 'focused(this)',
                                        'onfocusout': 'defocused(this)',
                                    }
                                }) }}
                              </div>
                            </div>
                          </div>
                          <div class="button-row d-flex mt-4">
                            
                            {{ form_widget(f.Add, {'attr': {'class': 'btn bg-gradient-dark ms-auto mb-0'}} ) }}

                        </div>
                         
                      </div>
          
                        
                        
                  </div>
          
          
                   
                      {{ form_end(f) }}
                  </div>
                </div>
              </div>
            </div>
          
          </div>

    </main>
    <script>
      document.addEventListener("DOMContentLoaded", function() {
          var typeField = document.getElementById("{{ f.type.vars.id }}");
          typeField.addEventListener("change", function() {
              togglePlayerFields(this);
          });
      });
      
      function togglePlayerFields(typeField) {
          var player3Field = document.getElementById('player3Field');
          var player4Field = document.getElementById('player4Field');
          
          if (typeField.value === 'Single') {
              player3Field.style.display = 'none';
              player4Field.style.display = 'none';
          } else {
              player3Field.style.display = 'block';
              player4Field.style.display = 'block';
          }
      }
  </script>
