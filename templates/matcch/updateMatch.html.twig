                                                    'attr': {
                                                      
                                                        'class': 'form-control',
                                                        'placeholder': 'MM',
                                                        'onfocus': 'focused(this)',
                                                        'onfocusout': 'defocused(this)',
                                                    }
                                                }) }}
                                            </div>
                                            <div class="col-md-4">
                                                {{ form_widget(f.date.year, {
                                                    'attr': {
                                                      
                                                        'class': 'form-control',
                                                        'placeholder': 'YYYY',
                                                        'onfocus': 'focused(this)',
                                                        'onfocusout': 'defocused(this)',
                                                    }
                                                }) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                         
                        
                        
                            <div class="row">
                                <div class="col-12 mt-3">
                                    <div class="input-group input-group-dynamic">
