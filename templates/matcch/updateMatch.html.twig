                                    <div class="input-group input-group-static my-3">
                                        <div class="row col-12">
                                            <div class="col-md-4">
                                                {{ form_widget(f.date.day,  {
                                                    'attr': {
                                                      
                                                        'class': 'form-control',
                                                        'placeholder': 'DD',
                                                        'onfocus': 'focused(this)',
                                                        'onfocusout': 'defocused(this)',
                                                    }
                                                }) }}
                                            </div>
                                            <div class="col-md-4">
