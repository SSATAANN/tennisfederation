{% extends 'base.html.twig' %}


{% block header %}

{% endblock %}

{% block sidebar %}

{% endblock %}

{% block footer %}

{% endblock %}
{% block body %}
<div class="section section-lg pt-0 " style="display: flex; justify-content: center; align-items: center;">
    <div class="container mt-5 text-center">
        <div class="col-12 col-md-6 col-lg-5 mb-5 mb-lg-0">
            <div class="card bg-primary shadow-soft border-light p-4">
<div class="card-body">
    {{ form_start(form, {'class': 'row g-3'}) }}
    <!-- Form -->
        <!-- Form -->
        <div class="row" > 
            <div class="form-group col-md-6">
                <label for="name">Your Name</label>
                <div class="input-group mb-4">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><span class="fas fa-envelope"></span></span>
                    </div>
                    {{ form_widget(form.name,{'attr':{'class':'form-control'}}) }}
                </div>
            </div>
        <!-- End of Form -->
       
        <!-- Form -->
                <div class="form-group col-md-6">
                    <label for="phone">Your Phone</label>
                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><span class="fas fa-envelope"></span></span>
                        </div>
                        {{ form_widget(form.phonenumber,{'attr':{'class':'form-control'}}) }}
                    </div>
                </div>
    </div>
        <!-- End of Form -->
        <!-- Form -->
       <div class="row" > 
        <div class="form-group col-md-12">
            <label for="email">Your Email</label>
            <div class="input-group mb-4">
                <div class="input-group-prepend">
                    <span class="input-group-text"><span class="fas fa-envelope"></span></span>
                </div>
                {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
            </div>
        </div>
    </div>
        <!-- End of Form -->
        <!-- Form -->
        <div class="row" > 
            <div class="form-group col-md-6">
                <label for="gender">Your Gender</label>
                <div class="input-group mb-4">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><span class="fas fa-envelope"></span></span>
                    </div>
                    {{ form_widget(form.gender,{'attr':{'class':'form-control'}}) }}
                </div>
            </div>

            <div class="form-group col-md-6">
                <label for="image">Your Image</label>
                <div class="input-group mb-4">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><span class="fas fa-envelope"></span></span>
                    </div>
                    {{ form_widget(form.imageFile, {'attr': {'class': 'custom-file-input'} }) }}
                </div>
            </div>
        </div>
        <!-- End of Form -->
        <div class="form-group">
            <!-- Form -->
            <div class="row" > 
                <div class="form-group col-md-12">
                    <label for="password">Your password</label>
                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><span class="fas fa-envelope"></span></span>
                        </div>
                        {{ form_widget(form.password.first,{'attr':{'class':'form-control'}}) }}
                    </div>
                </div>
            </div>
            <!-- End of Form -->
            <!-- Form -->
            <div class="row" > 
                <div class="form-group col-md-12">
                    <label for="confirmpassword">Confirm Password</label>
                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><span class="fas fa-envelope"></span></span>
                        </div>
                        {{ form_widget(form.password.second,{'attr':{'class':'form-control'}}) }}
                    </div>
                </div>
            </div>
            <!-- End of Form -->
            
            <div class="form-check mb-4">
                <input class="form-check-input" type="checkbox" value="" id="defaultCheck634">
                <label class="form-check-label" for="defaultCheck634">
                    I agree to the <a href="#">terms and conditions</a>
                </label>
            </div>
        </div>
        <button type="submit" class="btn btn-block btn-primary">Sign in</button>
        {{ form_end(form) }}<!-- End floating Labels Form -->
    
    <div class="d-block d-sm-flex justify-content-center align-items-center mt-4">
        <span class="font-weight-normal">
            Already have an account?
            <a href="{{ path('app_login') }}" class="font-weight-bold">Login here</a>
        </span>
    </div>
</div>
</div>
</div>
</div>
</div>
   
{% endblock %}